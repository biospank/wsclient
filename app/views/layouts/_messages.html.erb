<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-#{name == 'notice' ? 'success' : 'danger'}" >
      <button class="close" aria-hidden="true" data-dismiss="alert" type="button">&times;</button>
      <%= content_tag :div, raw(msg), :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>